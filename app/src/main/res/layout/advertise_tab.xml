<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UUID"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/id1box"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="a3083e3d-bd69-4703-9da3-3924c2ab07e2" />

            <Button
                android:id="@+id/button2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:foreground="@android:drawable/stat_notify_sync"
                android:foregroundTint="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#C81616" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="Major"

                android:textColor="#ff000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="Minor"
                android:textColor="#ff000000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/id2box"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="1" />

            <EditText
                android:id="@+id/id3box"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:ems="10"

                android:inputType="number"
                android:text="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#C81616"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#C81616"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"

            android:text="Tx Power"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/id4box"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="-69" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#C81616"
            android:textSize="12sp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/advertToggle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#447CAC"
        android:foreground="@android:drawable/ic_media_pause"
        android:foregroundGravity="center"
        android:foregroundTint="#FFFFFF" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/advertToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#447CAC"
        android:foreground="@android:drawable/ic_media_play"
        android:foregroundGravity="center"
        android:foregroundTint="#FFFFFF" />

</RelativeLayout>
